{
    "name": "t3-mattermost",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "nodemon",
        "build": "next build && tsc --project tsconfig.server.json",
        "postinstall": "prisma generate",
        "format": "prettier --write . && prisma format",
        "lint": "next lint",
        "lint:format": "prettier --check . && prisma format && sh .github/check-for-changes.sh 'Unformatted files, please run pnpm format'",
        "start": "cross-env NODE_ENV=production node dist/server.js"
    },
    "dependencies": {
        "@mattermost/client": "^7.4.0",
        "@next-auth/prisma-adapter": "^1.0.5",
        "@prisma/client": "^4.8.0",
        "@tanstack/react-query": "^4.20.0",
        "@trpc/client": "^10.8.1",
        "@trpc/next": "^10.8.1",
        "@trpc/react-query": "^10.8.1",
        "@trpc/server": "^10.8.1",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.3",
        "jose": "^4.11.2",
        "next": "13.1.1",
        "next-auth": "^4.18.7",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "superjson": "1.9.1",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@mattermost/types": "^7.4.0",
        "@types/node": "^18.11.18",
        "@types/prettier": "^2.7.2",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.47.1",
        "@typescript-eslint/parser": "^5.47.1",
        "autoprefixer": "^10.4.7",
        "eslint": "^8.30.0",
        "eslint-config-next": "13.1.1",
        "nodemon": "^2.0.20",
        "postcss": "^8.4.14",
        "prettier": "^2.8.1",
        "prettier-plugin-tailwindcss": "^0.2.1",
        "prisma": "^4.8.0",
        "tailwindcss": "^3.2.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "packageManager": "pnpm@7.26.1",
    "engines": {
        "node": ">=16.0.0",
        "pnpm": "7.26.1"
    },
    "ct3aMetadata": {
        "initVersion": "7.2.0"
    }
}
